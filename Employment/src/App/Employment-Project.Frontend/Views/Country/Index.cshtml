@model IEnumerable<Employment_Project.Frontend.Models.ViewModel.Country>

@{
    ViewData["Title"] = "Index";

    int idno = 1;
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />





<div class="container">

    <p class="text-center">
        <a class="btn btn-primary" asp-action="AddorEdit"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>

    <div class="text-center">
        <table id="countryTable" class="table table-striped table-bordered border-primary ">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Country Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @idno
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.countryName)
                        </td>
                        <td class="text-end">
                            <a class="btn btn-primary" href="Country/AddorEdit/@item.id"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |
                            <a class="delete-button btn btn-danger" href="Country/Delete/@item.id" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa-solid fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                    idno++;
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#countryTable').DataTable();
        });
    </script>
}
