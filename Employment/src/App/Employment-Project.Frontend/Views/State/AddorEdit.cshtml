@model Employment_Project.Frontend.Models.ViewModel.State

@{
    ViewData["Title"] = "AddorEdit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AddorEdit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.id)

                <div class="form-group mb-3">
                    <label class="control-label">Sate Name</label>
                    <select asp-for="countryId" asp-items="@(ViewBag.countryId)" class="form-select ">
                        <option selected>--Select Sate Name--</option>


                    </select>
                    <span asp-validation-for="countryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">State Name</label>
                    <input asp-for="stateName" class="form-control" />
                    <span asp-validation-for="stateName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
